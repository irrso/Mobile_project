<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="#fafafa"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="23dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/refresh"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/refresh" />

        <TextView
            android:id="@+id/location_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EFEFEF" />

    <LinearLayout
        android:id="@+id/PrefLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <android.widget.Button
            android:id="@+id/dislikeBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/dislike"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/HansikLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/layout_round"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/hansik"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/hansik"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/hansik_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:text="한식"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/YangsikLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/layout_round"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/yangsik"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/yangsik"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/yangsik_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:text="양식"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/IllsikLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/layout_round"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/illsik"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/illsik"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/illsik_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:text="일식"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/JungsikLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/layout_round"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/jungsik"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/jungsik"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/jungsik_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:text="중식"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/BunsikLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/layout_round"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/bunsik"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/bunsik"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/bunsik_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:text="분식"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/FastfoodLayout"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/layout_round"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/fastfood"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/fastfood"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/fastfood_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:text="패스트푸드" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/leftBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/left_button"
            android:minWidth="50dip"
            android:minHeight="33dip"
            android:text="거리순"
            android:textColor="#919191"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/rightBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right_button"
            android:minWidth="50dip"
            android:minHeight="33dip"
            android:text="평점순"
            android:textColor="#919191"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/food_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="74dp"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="320dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            app:ci_drawable="@drawable/indicator_selected"
            app:ci_drawable_unselected="@drawable/indicator_unselected"
            app:ci_height="7dp"
            app:ci_margin="4dp"
            app:ci_width="7dp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/InfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/map"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/map"
            android:visibility="invisible" />

        <android.widget.Button
            android:id="@+id/infoBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="333dp"
            android:background="@drawable/info"
            android:visibility="invisible" />

    </LinearLayout>

    <android.widget.Button
        android:id="@+id/selectBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_select" />

</LinearLayout>